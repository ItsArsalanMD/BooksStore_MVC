    <script>
        $(function () {
            $('#btn-toggle').on("click", function () {
                $('.sidenav').toggleClass("side-toggle");
            })

            $('#tblData').DataTable();
            


        })
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
