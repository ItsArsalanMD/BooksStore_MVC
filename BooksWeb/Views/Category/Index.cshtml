@model List<Category>;

@{
    ViewData["Title"] = "Categoreis";
}

<div class="row my-4">
    
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <h4 class="text-white  ps-3 text-uppercase">Categories List</h4>
                        </div>
                        <div class="col-sm-12 col-md-6 text-end align-item-center">
                            <a asp-controller="Category" asp-action="Create" class="btn btn-success mx-3">
                                <i class="bi bi-plus-circle"></i> Create New Category
                            </a>
                        </div>
                    </div>

                </div>
            </div>
            <div class="card-body px-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                    <h6>Category Name</h6>
                                </th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                    <h6 class="">Display Orders</h6>
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model.OrderBy(e => e.DisplayOrders))
                            {
                                <tr>
                                    <td class="px-4 py-3">
                                        @category.Name
                                    </td>
                                    <td class=" px-4">
                                        @category.DisplayOrders
                                    </td>
                                    <td class="text-end">
                                        <div class="row w-95 justify-content-end">
                                            <div class="col-md-5 text-end align-self-center">
                                                <a asp-controller="Category" asp-action="Edit" asp-route-Id="@category.Id"
                                                   class="form-control mb-0 btn btn-dark">
                                                    Edit
                                                </a>
                                            </div>
                                            <div class="col-md-5 text-end align-self-center">
                                                <a asp-controller="Category" asp-action="Delete" asp-route-Id="@category.Id"
                                                   class="form-control mb-0 btn btn-danger">
                                                    Delete
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
